{
  "name": "vue-material",
  "description": "Material Design for Vue.js",
  "version": "1.0.0-beta-15",
  "license": "MIT",
  "author": {
    "name": "marcosmoura",
    "email": "marcosvmmoura@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuematerial/vue-material.git"
  },
  "bugs": {
    "url": "https://github.com/vuematerial/vue-material/issues"
  },
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/vue-material.js",
  "module": "dist/vue-material.js",
  "unpkg": "dist/vue-material.min.js",
  "scripts": {
    "dev": "babel-node build/local",
    "build": "rm -rf dist/ && babel-node build/lib",
    "docs": "babel-node build/docs",
    "lint": "eslint --ext .js,.vue docs src build test --fix",
    "test": "jest",
    "coverage": "yarn test --coverage",
    "githooks": "sh build/git-hooks/install.sh",
    "changelog": "babel-node build/generate-changelog.js",
    "release": "sh build/release.sh",
    "new-component": "babel-node build/new-component.js",
    "github-release": "github-release",
    "commit": "git-cz",
    "postinstall": "opencollective-postinstall"
  },
  "engines": {
    "node": ">= 7.0"
  },
  "peerDependencies": {
    "vue": "^3.0.11"
  },
  "dependencies": {
    "opencollective-postinstall": "^2.0.2",
    "vue": "^3.0.11",
    "vue-github-button": "^1.3.0",
    "vue-github-buttons": "^3.1.0",
    "vue-jest": "^3.0.7",
    "vue-loader": "^16.2.0",
    "vue-toc": "0.0.2",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@vue/test-utils": "^2.0.0-rc.6",
    "autoprefixer": "^10.2.5",
    "avoriaz": "^6.3.0",
    "axios": "^0.21.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-env": "^2.4.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-stage-2": "^6.24.1",
    "chalk": "^4.1.1",
    "clipboard": "^2.0.8",
    "codesandbox": "^2.2.3",
    "commitizen": "^4.2.4",
    "concat": "^1.0.3",
    "connect-history-api-fallback": "^1.5.0",
    "conventional-changelog": "^3.1.24",
    "conventional-changelog-vue-material": "^0.0.1",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.2.4",
    "css-mqpacker": "^7.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "date-fns": "^2.21.3",
    "deepmerge": "^4.2.2",
    "eslint": "^7.26.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.9.0",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.17.1",
    "fast-deep-equal": "^3.1.3",
    "file-loader": "^6.2.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "fuzzysearch": "^1.0.3",
    "github-release-cli": "^2.0.0",
    "highlight.js": "^10.7.2",
    "html-webpack-plugin": "^5.3.1",
    "is-firefox": "^1.0.3",
    "is-promise": "^4.0.0",
    "jest": "^26.6.3",
    "jest-localstorage-mock": "^2.4.12",
    "jest-vue": "^0.8.2",
    "mini-css-extract-plugin": "^1.6.0",
    "node-sass": "^6.0.0",
    "offline-plugin": "^5.0.7",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "optimize-js-plugin": "^0.0.4",
    "ora": "^5.4.0",
    "popper.js": "^1.16.1",
    "postcss": "^8.2.15",
    "preload-webpack-plugin": "^2.3.0",
    "prerender-spa-plugin": "^3.4.0",
    "pretty": "^2.0.0",
    "raf": "^3.4.1",
    "sass-loader": "^11.1.0",
    "sinon": "^10.0.0",
    "url-loader": "^4.1.1",
    "vue-ga": "^1.1.0",
    "vue-i18n": "^8.24.4",
    "vue-router": "^3.5.1",
    "vue-style-loader": "^4.1.3",
    "vue-template-compiler": "^2.6.12",
    "vuelidate": "^0.7.6",
    "webpack": "^5.37.0",
    "webpack-bundle-analyzer": "^4.4.1",
    "webpack-dev-middleware": "^4.2.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^5.7.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/vue-material"
  },
  "jest": {
    "moduleNameMapper": {
      "^vue$": "<rootDir>/node_modules/vue/dist/vue.common.js",
      "^vue-material(.*)$": "<rootDir>/src$1",
      "^test(.*)$": "<rootDir>/test$1",
      "^src(.*)$": "<rootDir>/src$1",
      "^theme(.*)$": "<rootDir>/src/theme$1",
      "^base(.*)$": "<rootDir>/src/base$1",
      "^core(.*)$": "<rootDir>/src/core$1",
      "^components(.*)$": "<rootDir>/src/components$1",
      "\\.(css|scss)$": "<rootDir>/test/styleMock.js"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js",
    "collectCoverageFrom": [
      "src/**/*.{ts,js,vue}",
      "!src/**/index.ts",
      "!src/**/*.test.ts"
    ],
    "coverageReporters": [
      "lcov",
      "json",
      "html"
    ],
    "testURL": "http://localhost:8080"
  },
  "browserslist": [
    "> 1%"
  ]
}